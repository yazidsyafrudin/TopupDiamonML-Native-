<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_dark"
    tools:context=".TentangAplikasiActivity">

    <!-- ================= HEADER ================= -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_purple_gradient"
            app:contentInsetStart="0dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start|center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Kembali"
                android:src="@drawable/back_icon"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tentang Aplikasi"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ================= KONTEN UTAMA (SCROLLABLE) ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- APP INFO -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_logo_yas"
                android:contentDescription="Logo Aplikasi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="YazStore MLBB"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="Versi 1.0.0"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />

            <!-- RATING -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star" app:tint="@color/accent" android:contentDescription="Bintang"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_marginStart="2dp" android:src="@drawable/ic_star" app:tint="@color/accent" android:contentDescription="Bintang"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_marginStart="2dp" android:src="@drawable/ic_star" app:tint="@color/accent" android:contentDescription="Bintang"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_marginStart="2dp" android:src="@drawable/ic_star" app:tint="@color/accent" android:contentDescription="Bintang"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_marginStart="2dp" android:src="@drawable/ic_star_half" app:tint="@color/accent" android:contentDescription="Bintang Setengah"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="4.9 (10K+ ulasan)"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- DEVELOPER -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#1A213D"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_dark"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="Developer"
                        android:textColor="@color/accent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_code"
                        app:drawableTint="@color/accent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivDeveloper"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foto_yazid"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            app:strokeColor="@color/accent"
                            app:strokeWidth="2dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yazid Syafrudin"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Developer"
                                android:textColor="@color/white_70"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Pembuat &amp; Pengembang Aplikasi"
                                android:textColor="@color/white_70"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DESKRIPSI -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Deskripsi"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="1.3"
                android:text="YazStore MLBB adalah platform top up game terpercaya di Indonesia. Kami menyediakan layanan top up untuk berbagai game populer seperti Mobile Legends, Free Fire, PUBG Mobile, Genshin Impact, dan masih banyak lagi. Dengan proses yang cepat, aman, dan harga yang kompetitif, YazStore MLBB menjadi pilihan jutaan gamers Indonesia."
                android:textColor="#D1D5DB"
                android:textSize="14sp" />

            <!-- FITUR UNGGULAN -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Fitur Unggulan"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- ======================================================== -->
            <!--        PERBAIKAN UTAMA PADA GRIDLAYOUT DI SINI           -->
            <!-- ======================================================== -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"> <!-- Atribut dipindahkan ke sini -->

                <!-- Fitur 1 -->
                <include layout="@layout/item_feature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"/>
                <!-- Fitur 2 -->
                <include layout="@layout/item_feature_aman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"/>
                <!-- Fitur 3 -->
                <include layout="@layout/item_feature_promo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"/>
                <!-- Fitur 4 -->
                <include layout="@layout/item_feature_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"/>
            </GridLayout>

            <!-- LEGAL & LISENSI -->
            <include layout="@layout/item_info_syarat" android:id="@+id/linkSyarat"/>
            <include layout="@layout/item_info_privasi" android:id="@+id/linkPrivasi"/>
            <include layout="@layout/item_info_lisensi" android:id="@+id/linkLisensi"/>

            <!-- BANTUAN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Butuh Bantuan?"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hubungi Kami"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="support@yazstore.com"
                    android:textColor="@color/accent"
                    android:textSize="14sp"
                    app:drawableStartCompat="@drawable/ic_email"
                    app:drawableTint="@color/accent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="082257513283"
                    android:textColor="@color/accent"
                    android:textSize="14sp"
                    app:drawableStartCompat="@drawable/ic_whatsap"
                    app:drawableTint="@color/accent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
