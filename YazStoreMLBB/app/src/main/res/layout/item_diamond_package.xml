<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPackage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@drawable/diamond_item_background_selector"
    app:strokeWidth="1.5dp"
    app:strokeColor="@color/diamond_item_stroke_selector">

    <!-- Menggunakan ConstraintLayout untuk kontrol posisi yang lebih presisi -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/bg_card_dark">  <!-- PERUBAHAN DI SINI: dari @color/ menjadi @drawable/ -->

        <!-- Ikon Diamond Utama -->
        <ImageView
            android:id="@+id/ivDiamondIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_diamond"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:tint="#4A90E2"/>

        <!-- Ikon Centang (Checkmark) Saat Terpilih -->
        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/success"
            tools:visibility="visible"/>

        <!-- Teks Jumlah Diamond -->
        <TextView
            android:id="@+id/tvDiamonds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/diamond_item_text_selector"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ivDiamondIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="706" />

        <!-- Teks Bonus -->
        <TextView
            android:id="@+id/tvBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_bonus_badge"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvDiamonds"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="+51 Bonus"
            tools:visibility="visible" />

        <!-- Teks Harga -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/diamond_item_text_selector"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvBonus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Rp 120.000" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
