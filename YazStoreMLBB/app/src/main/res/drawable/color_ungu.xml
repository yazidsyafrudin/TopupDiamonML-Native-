<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item android:top="3dp">
        <shape>
            <solid android:color="#00000033"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>

    <!-- Button utama -->
    <item>
        <shape>
            <gradient
                android:startColor="#AA3EFF"
                android:endColor="#AA3EFF"
                android:angle="270"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>

</layer-list>
