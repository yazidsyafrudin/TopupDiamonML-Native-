<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background card -->
    <solid android:color="#131720"/>

    <!-- Rounded corner -->
    <corners android:radius="10dp"/>

    <!-- Border tipis -->
    <stroke
        android:width="1dp"
        android:color="#2A2F3A"/>

    <!-- Padding dalam card -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>

</shape>
