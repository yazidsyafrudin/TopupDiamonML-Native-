<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_succes_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Success Icon -->
        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_succes_icon"
            android:padding="20dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/white" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Pembayaran Berhasil!"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Diamond akan masuk ke akun Anda dalam 1â€“5 menit"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- ====================================================== -->
        <!-- ============== KODE KARTU YANG DIPERBAIKI ============== -->
        <!-- ====================================================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_card_transaction"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ID Transaksi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ID Transaksi"
                    android:textColor="@color/input_hint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTransactionId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="TRX176726373..." />

                <ImageView
                    android:id="@+id/btnCopy"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_copy"
                    app:tint="@color/accent" />
            </LinearLayout>

            <!-- Garis Pemisah Atas -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/divider" />

            <!-- Menggunakan GridLayout untuk menata data dalam 2 kolom -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:useDefaultMargins="true">

                <!-- Baris 1: User ID -->
                <TextView
                    android:layout_columnWeight="1"
                    android:layout_gravity="start|center_vertical"
                    android:text="User ID"
                    android:textColor="@color/input_hint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvUserId"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="123456789 (1234)" />

                <!-- Baris 2: Diamond -->
                <TextView
                    android:layout_columnWeight="1"
                    android:layout_gravity="start|center_vertical"
                    android:text="Diamond"
                    android:textColor="@color/input_hint"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_gravity="end|center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_diamond"/>

                    <TextView
                        android:id="@+id/tvDiamondAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="257" />
                </LinearLayout>

                <!-- Baris 3: Metode -->
                <TextView
                    android:layout_columnWeight="1"
                    android:layout_gravity="start|center_vertical"
                    android:text="Metode"
                    android:textColor="@color/input_hint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPaymentMethod"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="GoPay" />

            </GridLayout>

            <!-- Garis Pemisah Bawah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/divider" />

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Bayar"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/accent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Rp 57.000" />
            </LinearLayout>

        </LinearLayout>
        <!-- ================== AKHIR KARTU PERBAIKAN ================= -->


        <!-- Button Home -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToHome"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Kembali ke Beranda"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:backgroundTint="@color/accent"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            app:iconTint="@android:color/black" />

        <!-- Button Retry -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTopUpAgain"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Top Up Lagi"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp" />

        <!-- Help -->
        <TextView
            android:id="@+id/tvContactCS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="Ada masalah? Hubungi Customer Service"
            android:textColor="@color/accent"
            android:textSize="13sp" />

    </LinearLayout>

</ScrollView>
