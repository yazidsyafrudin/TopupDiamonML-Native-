<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F1A"
    android:fillViewport="true"
    android:overScrollMode="never"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ================= HEADER (No changes) ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat datang,"
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Player123" />
            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_notification"
                android:contentDescription="Notifikasi"
                android:padding="8dp"
                android:src="@drawable/ic_notification"
                app:tint="#000000" />
        </LinearLayout>

        <!-- ================= SALDO CARD (No changes) ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_card_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo Anda"
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvUserBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFC107"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="Rp 150.000" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTopUpHome"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:backgroundTint="#FFC107"
                android:text="Top Up"
                android:textColor="#000000"
                android:textStyle="bold"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <!-- ================= MENU (No changes) ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_card_dark"
            android:orientation="horizontal">

            <include
                android:id="@+id/menuTopup"
                layout="@layout/item_menu_topup" />
            <include
                android:id="@+id/menuRiwayat"
                layout="@layout/item_menu_riwayat" />
            <include
                android:id="@+id/menuPromo"
                layout="@layout/item_menu_promo" />
            <include
                android:id="@+id/menuSaldo"
                layout="@layout/item_menu_saldo" />
        </LinearLayout>

        <!-- ================= PROMO (No changes) ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Promo Spesial"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvLihatSemuaPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Semua >"
                android:textColor="#FFC107"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- ================= PROMO CARD (UPDATED FOR SLIDER) ================= -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPromo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <!-- ViewPager2 untuk image slider -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/promoViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>


        <!-- ================= TRANSAKSI TERAKHIR (UPDATED) ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaksi Terakhir"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLihatSemuaTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:text="Semua >"
                android:textColor="#FFC107"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- RecyclerView untuk daftar transaksi dinamis -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLastTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            tools:itemCount="2"
            tools:listitem="@layout/item_transaction" />

        <!-- Pesan yang muncul jika tidak ada transaksi -->
        <TextView
            android:id="@+id/tvNoHistoryMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Belum ada riwayat transaksi."
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>
</ScrollView>
