<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#1A213D"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_dark"
        android:padding="16dp">

        <!-- Ikon Fitur (diganti menjadi ic_heart) -->
        <ImageView
            android:id="@+id/ivFeatureIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart"
            app:tint="@color/accent"
            tools:ignore="ContentDescription" />

        <!-- Judul Fitur (diganti teksnya) -->
        <TextView
            android:id="@+id/tvFeatureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Support 24/7"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Deskripsi Fitur (diganti teksnya) -->
        <TextView
            android:id="@+id/tvFeatureDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lineSpacingMultiplier="1.2"
            android:text="Tim customer service siap membantu"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
