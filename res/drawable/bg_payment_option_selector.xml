<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State: Saat RadioButton DIPILIH (checked) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- Warna latar belakang saat dipilih -->
            <solid android:color="@color/accent" />
            <!-- Garis tepi saat dipilih -->
            <stroke android:width="2dp" android:color="@color/black" />
            <!-- Sudut membulat -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- State: Default (saat RadioButton TIDAK dipilih) -->
    <item>
        <shape android:shape="rectangle">
            <!-- Warna latar belakang default -->
            <solid android:color="@color/bg_card_dark" />
            <!-- Garis tepi default -->
            <stroke android:width="1dp" android:color="@color/bg_border_dark" />
            <!-- Sudut membulat -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>
