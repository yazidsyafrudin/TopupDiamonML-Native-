<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corner -->
    <corners android:radius="18dp"/>

    <!-- Gradient background -->
    <gradient
        android:startColor="#3A4152"
        android:endColor="#2B3140"
        android:angle="270"/>

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#4A5165"/>

</shape>
