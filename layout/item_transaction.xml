<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    app:cardBackgroundColor="#1E2749"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_dark"
        android:padding="16dp">

        <!-- Diamond Icon -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDiamond"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="#2A3150"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_diamond"/>

        </androidx.cardview.widget.CardView>

        <!-- Diamond Amount -->
        <TextView
            android:id="@+id/tvDiamondAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="1,412 Diamond"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cardDiamond"
            app:layout_constraintTop_toTopOf="@+id/cardDiamond" />

        <!-- Bonus -->
        <TextView
            android:id="@+id/tvBonusAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+212 Bonus"
            android:textColor="#FFA500"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvDiamondAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvDiamondAmount" />

        <!-- Status Badge -->
        <LinearLayout
            android:id="@+id/layoutStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_success"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardDiamond">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_check"
                app:tint="#00E676"/> <!-- SUDAH DIPERBAIKI -->


            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Berhasil"
                android:textColor="#00E676"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#2A3150"
            app:layout_constraintTop_toBottomOf="@+id/cardDiamond" />

        <!-- Transaction ID -->
        <TextView
            android:id="@+id/labelTransactionId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ID Transaksi"
            android:textColor="#B0B3C7"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/tvTransactionId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="TRX001"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/labelTransactionId"
            app:layout_constraintWidth_percent="0.6" />

        <!-- User ID -->
        <TextView
            android:id="@+id/labelUserId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="User ID"
            android:textColor="#B0B3C7"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelTransactionId"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/tvUserId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="123456789 (2345)"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/labelUserId"
            app:layout_constraintWidth_percent="0.6" />

        <!-- Payment Method -->
        <TextView
            android:id="@+id/labelPayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Pembayaran"
            android:textColor="#B0B3C7"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelUserId"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="GoPay"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/labelPayment"
            app:layout_constraintWidth_percent="0.6" />

        <!-- Date -->
        <TextView
            android:id="@+id/labelDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tanggal"
            android:textColor="#B0B3C7"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelPayment"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="28 Des 2024 - 14:30"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/labelDate"
            app:layout_constraintWidth_percent="0.6" />

        <!-- Total -->
        <TextView
            android:id="@+id/labelTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total"
            android:textColor="#B0B3C7"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelDate"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Rp 249,000"
            android:textColor="#FFD700"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/labelTotal"
            app:layout_constraintWidth_percent="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>